<div class="row flex-lg-row-reverse align-intems-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <img src="/img/home_cooking.png" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="Cooking">
    </div>
    <div class="col-12 col-lg-6">
        <h1 class="display-5 fw-bold mb-3 text-white">Huge selection of delicious recipe ideas</h1>
        <p class="lead text-white">
            Explore our huge selection of delicious recipe ideas including; easy desserts, delicious vegan and vegetarian dinner ideas, gorgeous pasta recipes, quick bakes, family-friendly meals and gluten-free recipes.
        </p>

        <div class="d-grid gap-2 d-md-flex justify-content-center-md-start">
            <a href="/explore-latest" class="btn btn-outline-primary btn-dark btn-lg px-4 me-md-2">Explose Latest</a>
            <a href="/explore-random" class="btn btn-outline-warning btn-dark btn-lg px-4 me-md-2">Show Random</a>
        </div>
    </div>
</div>

<!-- Categories Start -->

<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">
    <% if(categories != ''){ %>
        <% categories.forEach(function(category,index){ %>
            <a href="/categories/<%- category.name %>" class="col text-center category__link text-white">
                <div class="category__image shadow">
                    <img src="img/<%- category.image %>" alt="<%- category.name %>" loading="lazy">
                </div>
                <div class="pt-1 text-white"><%- category.name %></div>
            </a>
        <% }); %>
    <% } %>

    <a href="/categories" class="col text-center category__link text-white">
        <div class="category__image shadow">
            <img src="img/view-all.webp" alt="View All Categories" loading="lazy">
        </div>
        <div class="pt-1 text-white">View All</div>
    </a>

</div>

<!-- Categories End -->



<!-- Latest Start -->

<section class="pb-4 pt-4 ">
    <div class="d-flex mb-2 align-items-center text-white">
        <h2>Latest Recipes</h2>
        <a href="/explore-latest" class="ms-auto text-white">View More</a>
    </div>
    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% if( food != '' ) { %>
            <% food.lastest.forEach(function(recipe,index){ %>
                <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
                    <a href="/recipe/<%= recipe._id %>" class="col text-center category__link">
                        <div class="category__image category__image--large shadow">
                            <img src="uploads/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy">
                        </div>
                        <div class="pt-1 text-white"><%= recipe.name %></div>
                    </a>
                </div>
            <% }); %>
        <% } %>
    </div>
</section>

<!-- Latest End -->



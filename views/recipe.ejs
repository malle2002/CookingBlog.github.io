<% if( recipe != null ) { %>
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/" class="text-white">Home</a></li>
            <li class="breadcrumb-item active text-white" aria-current="page"><%- recipe.name %></li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-12 col-md-4">
            <img src="/uploads/<%= recipe.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%= recipe.name %>" loading="lazy">
        </div>

        <div class="col-12 col-md-8">
            <div class="row">
                <div class="col-12"><h1 class="text-white"><%- recipe.name %></h1></div>
                <div class="col-12 mb-4 text-white"><i class="bi bi-tag"></i><%- recipe.category %></div>
                <div class="col-12" style="white-space: pre-line;"></div>
                <h4 class="text-white border-bottom">Cooking Instructions</h4>
                <p class="text-white"><%- recipe.description %></p>
            </div>

            <div class="row pt-4">
                <div class="col-12">
                    <h4 class="text-white border-bottom">Ingrediants:</h4>
                    <ul class="list-group list-group-flush bg-dark">
                        <% recipe.ingrediants.forEach(function(ingrediants,index){ %>
                            <li class="list-group-item bg-dark">
                                <p class="text-white"><%= ingrediants %></p>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
<% } else { %>
    <p class="text-white">No item found.</p>
<% } %>